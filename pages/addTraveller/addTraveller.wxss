/* pages/addTraveller/addTraveller.wxss */
.addT-container {
    background-color: #e6f0f0;
    width: 100%;
    height: 100vh;
}
.under-border {
    border-bottom: 1rpx solid #e9e9e9;
}
.depart-border {
    border-bottom: 20rpx solid #e6f0f0;
}
.each-inp-line {
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 24rpx;
    padding-right: 24rpx;
    background-color: white;
}
.each-line-title {
    color: #262626;
    font-size: 26rpx;
    text-align: left;
    display: inline-block;
    vertical-align: top;
}
.each-line-title:after {
    content: '*';
    color: #d35352;
    margin-left: 30rpx;
}
.each-input {
    display: inline-block;
    width: 70%;
    font-size: 28rpx;
    color: #262626;
    margin-top: 14rpx;
    margin-left: 14rpx;
}
.right-arrow {
    float: right;
    margin-right: 14rpx;
    color: #d0d0d0;
    font-size: 26rpx;
}

.sex-wrapper {
    width: 300rpx;
    height: 100%;
    display: inline-block;
    margin-left: 14rpx;
}
.radio-sex {
    display: inline-block;
    margin-top: -26rpx;
}

.save {
    width: 100%;
    height: 94rpx;
    color: #fff;
    background-color: #49bcbd;
    border-radius: 0;
    position: absolute;
    bottom: 0;
    font-size: 36rpx;
}
.reason-arrow {
	color: #d0d0d0;
	font-size: 28rpx;
	float: right;
}
.picker-word {
    font-size: 28rpx;
    color: #d0d0d0;
    margin-left: 14rpx; 
}
.placeH {
    color: #d0d0d0;
}