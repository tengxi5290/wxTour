@import "../styles/fonts.wxss";
.banner {
	width: 100%;
	height: 370rpx;
	background-image: url(http://newwechat.oss-cn-beijing.aliyuncs.com/bugentuan/%E5%88%97%E8%A1%A8%E8%92%99%E7%89%88%E5%88%87%E5%9B%BE.jpg);
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
	border-bottom: 20rpx solid #e6f0f0;
}
.banner-mask {
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,.4);
}
.max-title {
	padding-top: 114rpx;
	color: #fff;
	font-size: 70rpx;
	text-align: center;
}
.max-en-title {
	margin-top: 10rpx;
	color: #fff;
	font-size: 28rpx;
	text-align: center;
}
.line {
	width: 200rpx;
	height: 1rpx;
	margin: 0 auto;
	background-color: rgba(255,255,255,.6);
	margin-top: 10rpx;
}
.comeon {
	color: #fff;
	font-size: 24rpx;
	text-align: center;
	margin-top: 10rpx;
}
.list-block {
	padding-left: 24rpx;
	padding-right: 24rpx;
	background-color: #fff;
	padding-bottom: 110rpx;
}
.each-list-block {
	border-bottom: 1rpx solid #e9e9e9;
	padding-bottom: 27rpx;
	padding-top: 27rpx;
}
.each-picture {
	width: 230rpx;
	height: 160rpx;
	border-radius: 10rpx;
	display: inline-block;
	vertical-align: top;
	background-image: url(https://bugentuan.yoroliving.com/images/bg.jpg);
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
}
.each-list-title {
	display: inline-block;
	width: 65%;
}
.kitty {
	color: #262626;
	font-size: 28rpx;
	margin-left: 18rpx;
	display: block;
	line-height: 40rpx;
	padding-top: 0;
	height: 120rpx;
}
.num-price {
	display: block;
}
.num {
	color: #d0d0d0;
	font-size: 24rpx;
	margin-left: 18rpx;
}
.price {
	color: #d35352;
	font-size: 36rpx;
	float: right;
}
/*底部固定导航*/
.weui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.weui-flex__item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.bottom-nav {
	width: 100%;
	/*height: 110rpx;*/
	padding-top: 16rpx;
	padding-bottom: 16rpx;
	background-color: #262626;
	position: fixed;
	bottom: 0;
	left: 0;
	color: white;
}
.blocks {
	display: block;
	text-align: center;
}
.word-line {
	font-size: 24rpx;
}
.cyan {
	color: #49bcbd;
}
.white {
	color: white;
}