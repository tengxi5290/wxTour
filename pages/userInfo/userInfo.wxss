.info-container {
	width: 100%;
	height: 100vh;
	background-color: #e6f0f0; 
}
.info-list {
	background-color: #fff;
	padding-left: 24rpx;
	padding-right: 24rpx;
}
.img-line {
	height: 140rpx;
	line-height: 140rpx;
}
.line-title {
	font-size: 30rpx;
	color: #262626;
	display: inline-block;
}
.right-inner {
	display: inline-block;
	float: right;
}
.head-image {
	width: 80rpx;
	height: 80rpx;
	display: inline-block;
	vertical-align: middle;
	border-radius: 100%;
	overflow: hidden;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	background-image: url(https://bugentuan.yoroliving.com/images/wall1.jpg);
}
.info-arrow {
	display: inline-block;
	margin-left: 14rpx;
	font-size: 24rpx;
	color: #d0d0d0;
}
.each-info-line {
	line-height: 100rpx;
	height: 100rpx;
	clear: both;
	overflow: hidden;
}
.info-inner {
	font-size: 24rpx;
	color: #d0d0d0;
	display: inline-block;
}
.withborder {
	border-bottom: 1rpx solid #e9e9e9;
}

.sSureBut {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
}
.surebut {
    width: 100%;
    height: 100rpx;
    background-color: #d35352;
    color: #fff;
    text-align: center;
    border-radius: 0;
    line-height: 100rpx;
}
.surebut:after {
    border: none;
}