.edit-container {
	width: 100%;
	height: 100vh;
	background-color: #e6f0f0;
	padding-top: 20rpx;
}
.inp-line {
	background-color: #fff;
	padding-left: 24rpx;
	padding-right: 24rpx;
	line-height: 130rpx;
	height: 100rpx;
}
.inp {
	display: inline-block;
	width: 80%;
}
.clear-inp {
	display: inline-block;
	float: right;
	margin-top: -5rpx;
}
.attention {
	margin-top: 10rpx;
	font-size: 24rpx;
	color: #9d9d9d;
	padding-left: 24rpx;
}
.save-container {
	padding-left: 24rpx;
	padding-right: 24rpx;
}
.save {
	height: 70rpx;
	color: #fff;
	line-height: 70rpx;
	font-size: 30rpx;
	margin-top: 64rpx;
	background-color: #49bcbd;
}