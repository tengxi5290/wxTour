/* pages/coupon/coupon.wxss */
.coupon-container {
    width: 100%;
    height: 100vh;
    overflow: hidden;
    background-color: #e6f0f0;
}
.inp-wrapper {
    height: 90rpx;
    margin-top: 20rpx;
    padding-left: 24rpx;
    padding-right: 24rpx;
}
.coupon-inp {
    padding-left: 24rpx;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
    background-color: #fff;
    font-size: 30rpx;
    color: #262626;
    display: inline-block;
    height: 90rpx;
    line-height: 90rpx;
    width: 78%;
}
.light {
    color: #d0d0d0;
}
.check-coupon {
    background-color: #49bcbd;
    color: white;
    font-size: 30rpx;
    display: inline-block;
    width: 90rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0;
    border-radius: 0;
    border-top-right-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.coupon-used {
    height: 120rpx;
    width: 100%;
    padding-left: 24rpx;
    overflow: hidden;
    clear: both;
    background-color: #fff;
    border-bottom: 1rpx solid #e9e9e9;
}
.used-state-block {
    width: 100rpx;
    height: 120rpx;
    line-height: 120rpx;
    display: inline-block;
    vertical-align: top;
}
.used-state {
    display: inline-block;
    width: 100rpx;
    height: 44rpx;
    background-color: #d0d0d0;
    color: #fff;
    font-size: 26rpx;
    line-height: 44rpx;
    text-align: center;
    border-radius: 10rpx;
}
.coupon-price-block {
    margin-left: 24rpx;
    display: inline-block;
    height: 120rpx;
    vertical-align: top;
}
.bottom-line-coupon, .top-line-coupon {
    height: 60rpx;
    line-height: 60rpx;
}
.bottom-line-coupon {
    color: #d0d0d0;
    font-size: 24rpx;
}
.top-line-coupon {
    color: #262626;
    font-size: 30rpx;
}
.coupon-price {
    margin-left: 20rpx;
    color: #d35352;
}
.useOrNot {
    padding-right: 24rpx;
    height: 120rpx;
    float: right;
    display: inline-block;
}
.cancelOrNot {
    margin-top: 30rpx;
    line-height: 60rpx;
    height: 60rpx;
    color: #49bcbd;
    font-size: 30rpx;
    padding-right: 24rpx;
    padding-left: 24rpx;
    border-left: 1rpx solid #d0d0d0;
}


.usable-coupon {
    margin-top: 20rpx;
}
.withBorder {
    border-bottom: 1rpx solid #e9e9e9;
}
.desc-price {
    background-color: transparent;
    color: #d35352;
}


.sSureBut {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100vw;
}
.surebut {
    width: 100%;
    height: 100rpx;
    background-color: #d35352;
    color: #fff;
    text-align: center;
    border-radius: 0;
    line-height: 100rpx;
}
.surebut:after {
    border: none;
}
