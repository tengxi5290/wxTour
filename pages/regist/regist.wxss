@import "../styles/fonts.wxss";
.regist-container {
	width: 100vw;
	height: 100vh;
	background-color: #e6f0f0;
}
.each-line {
	height: 120rpx;
	line-height: 150rpx;
}
.each-line text {
	display: inline-block;
	vertical-align: super;
}
.each-line-icon {
	vertical-align: top;
	margin-top: 14rpx;
}
.uInp {
	display: inline-block;
	margin-left: 26rpx;
	font-size: 30rpx;
	color: #262626;
	width: 400rpx;
}
.pstyle {
	font-size: 30rpx;
	color: #d0d0d0;
}
.fright {
	float: right;
	margin-right: 18rpx;
}
.choose-traveller-but {
    /*border: 1rpx solid #49bcbd;*/
    border-radius: 10rpx;
    height: 44rpx;
    background-color: transparent;
    line-height: 44rpx;
    color: #262626;
    font-size: 24rpx;
    float: right;
    margin-top: 38rpx;
}
.checkBut {
    background-color: #49bcbd;
    color: white;
}
.checkBut-disable {
    background-color: #d0d0d0;
    border: 1rpx solid #d0d0d0;
}
.regist-button {
	margin-top: 50rpx;
}
.rButton {
	height: 94rpx;
	width: 650rpx;
	margin: 0 auto;
	display: block;
	color: #fff;
	background-color: #b3e3e3;
	border-radius: 94rpx;
	line-height: 94rpx;
}
.warning-msg {
	width: 100%;
	height: 70rpx;
	background-color: #e64340;
	color: white;
	line-height: 70rpx;
	text-align: center;
}
.hidden {
	display: none;
}